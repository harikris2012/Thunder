{
  "$schema": "interface.schema.json",
  "jsonrpc": "2.0",
  "info": {
    "title": "Process Containers",
    "class": "Containers",
    "description": "Process Containers JSON-RPC API"
  },
  "common": {
    "$ref": "common.json"
  },
  "properties": {
    "containers": {
      "summary": "List of active containers",
      "readonly": true,
      "params": {
        "type": "array",
        "description": "List of names of all containers",
        "items": {
          "type": "string",
          "example": "ContainerName"
        }      
      }    
    },
    "networks": {
      "summary": "List of network interfaces of the container",
      "readonly": true,
      "params": {
        "type": "array",
        "description": "List of all network interfaces related to the container",
        "items": {
          "type": "object",
          "description": "Returns networks associated with the container",
          "properties": {
            "interface": {
              "type": "string",
              "description": "Interface name",
              "example": "veth3NF06K"
            },
            "ips": {
              "type": "array",
              "description": "List of ip addresses",
              "items": {
                "type": "string",
                "description": "IP address",
                "example": "192.168.0.12"
              }
            }
          }
        }      
      },
      "index": {
        "name": "Name",
        "example": "ContainerName"
      },
      "errors": [
        {
          "description": "Container not found",
          "$ref": "#/common/errors/unavailable"
        }
      ]
    },
    "memory": {
      "summary": "Memory taken by container",
      "readonly": true,
      "params": {
        "type": "object",
        "description": "Memory allocated by the container, in bytes",
        "properties": {
          "allocated": {
            "description": "Memory allocated by container",
            "type": "number",
            "size": 64
          },
          "resident": {
            "description": "Resident memory of the container",
            "type": "number",
            "size": 64
          },
          "shared": {
            "description": "Shared memory in the container",
            "type": "number",
            "size": 64
          }
        }
      },
      "index": {
        "name": "Name",
        "example": "ContainerName"
      },
      "errors": [
        {
          "description": "Container not found",
          "$ref": "#/common/errors/unavailable"
        }
      ]
    },
    "status": {
      "summary": "Operational status of the container",
      "readonly": true,
      "params": {
        "type": "string",
        "description": "Status of the container",
        "enum": [
          "stopped",
          "starting",
          "running",
          "aborting",
          "stopping"
        ]  
      },
      "index": {
        "name": "Name",
        "example": "ContainerName"
      },
      "errors": [
        {
          "description": "Container not found",
          "$ref": "#/common/errors/unavailable"
        }
      ]
    },
    "cpu": {
      "summary": "CPU time",
      "readonly": true,
      "params": {
        "type": "object",
        "description": "CPU time spent on running the container, in nanoseconds",
        "properties": {
          "total": {
            "type": "number",
            "size": 64,
            "description": "CPU-time spent on container, in nanoseconds",
            "example": "2871287421"
          },
          "threads": {
            "type": "array",
            "description": "Time spent on each cpu-thread, in nanoseconds",
            "items": {
              "type": "number",
              "size": 64,
              "example": "12314235"
            }
          }
        }
      },
      "index": {
        "name": "Name",
        "example": "ContainerName"
      },
      "errors": [
        {
          "description": "Container not found",
          "$ref": "#/common/errors/unavailable"
        }
      ]
    },
    "logpath": {
      "summary": "Containers log",
      "readonly": true,
      "params": {
        "type": "string",
        "description": "logs from the container"
      },
      "index": {
        "name": "Name",
        "example": "ContainerName"
      },
      "errors": [
        {
          "description": "Container not found",
          "$ref": "#/common/errors/unavailable"
        }
      ]
    },
    "configpath": {
      "summary": "Container's configuration",
      "readonly": true,
      "params": {
        "type": "string",
        "description": "configuraiton of the container"
      },
      "index": {
        "name": "Name",
        "example": "ContainerName"
      },
      "errors": [
        {
          "description": "Container not found",
          "$ref": "#/common/errors/unavailable"
        }
      ]
    }
  },
  "methods": {
    "stop": {
      "summary": "Stops a container",
      "params": {
        "type": "object",
        "properties": {
          "name": {
            "description": "Name of container",
            "type": "string", 
            "example": "ContainerName"
          }
        }
      },
      "result": {
        "$ref": "#/common/results/void"
      },
      "errors": [
        {
          "description": "Container not found",
          "$ref": "#/common/errors/unavailable"
        }
      ]
    }
  }
}